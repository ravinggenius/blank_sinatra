!!! 5
%html{ :lang => 'en', :xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en'}
  %head
    %title= @title

    %meta{ 'http-equiv' => 'Content-Type', 'content' => 'text/html; charset=utf-8' }/

    / %link{ :rel => 'shortcut icon', :href => '/images/favicon.ico' }/

    = partial :script_tags, :files => ['http://assets.ravinggenius.com/js?modernizr=1.1&jquery=1.4', '/scripts/application.js']

    = partial :style_tags, :files => ['http://assets.ravinggenius.com/css?html5reset=1.4', '/styles/application.css']

    = partial :tracking_google, :google_analytics_tracking_code => 'UA-xxxxxxx-xx'

  %body
    %header#branding
      %a{ :href => '/' }
        %img{ :src => '/images/logo.png', :alt => 'logo' }/
        %span.h= @site_name
      %span= @site_tagline

    %nav#main_menu
      = partial :menu

    %section#content
      = yield

    %footer#credits
      %small#copyright= "&copy; #{@site_name}"

    = partial :tracking_woopra
